# AIサービス用環境変数テンプレート（CI環境用）

# OpenAI Settings
OPENAI_API_KEY=${OPENAI_API_KEY}
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
LLM_TIMEOUT_SEC=60

# Security (for internal communication)
INTERNAL_AI_TOKEN=test-internal-token-for-ci

# Future AI Services (CI環境では使用しないため空の値を設定)
CEREBRAS_API_KEY=
TAVILY_API_KEY=

# Application Settings
DEBUG=false
NODE_ENV=test
# バックエンドAPIのURL（CI環境ではDocker Compose内のサービス名を使用）
BACKEND_URL=http://backend:3000
# ポート設定
PORT=3000
# ログレベル
LOG_LEVEL=info
