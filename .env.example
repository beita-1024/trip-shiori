# ===========================================
# Trip Shiori - プロジェクトルート環境変数
# ===========================================

# データベース設定（Docker Compose用）
POSTGRES_DB=xxxxx
POSTGRES_USER=xxxxx
POSTGRES_PASSWORD=xxxxx

# アプリケーション設定
NODE_ENV=development


#   CAPROVER_URL               例: https://captain.example.com
#   CAPROVER_APP_FE            例: trip-frontend
#   CAPROVER_TOKEN_FE          → CapRover: frontend アプリの App Token
#   CAPROVER_APP_BE            例: trip-backend
#   CAPROVER_TOKEN_BE          → CapRover: backend アプリの App Token
#   BRANCH (任意)              省略可。未指定なら現在のローカルブランチ

# CapRover
CAPROVER_URL=https://captain.apps.xxxxx.dev/
CAPROVER_APP_FE=xxxxx
CAPROVER_TOKEN_FE=xxxxx
CAPROVER_APP_BE=xxxxx
CAPROVER_TOKEN_BE=xxxxx