# ===========================================
# Trip Shiori Backend - 環境変数設定例
# ===========================================

# データベース設定
DATABASE_URL=postgresql://postgres:password@db:5432/trip_shiori

# JWT設定
JWT_SECRET=your_jwt_secret_key_here_change_this_in_production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Gmail設定（App Password使用）
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your.email@gmail.com
SMTP_PASS=your_app_password_here
SMTP_FROM_NAME=Trip Shiori
SMTP_FROM_EMAIL=your.email@gmail.com

# アプリケーション設定
NODE_ENV=development


FRONTEND_URL=http://localhost:3001

# OpenAI設定（オプション）
OPENAI_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-4o-mini

# デバッグ設定
DEBUG=0

# INFO: 現在は使ってない、セキュリティ強化時（X-Internal-Token用）に使用する。
INTERNAL_AI_TOKEN=xxxxx

INTERNAL_AI_BASE_URL=http://127.0.0.1:6000
OPENAI_MODEL=gpt-4o-mini
OPENAI_TEMPERATURE=0.3
LLM_TIMEOUT_SEC=30


# INFO: 今はまだ使ってない、将来CEREBRAS+TAVILYにする用
CEREBRAS_API_KEY=csk-xxxx
TAVILY_API_KEY=tvly-xxxx
